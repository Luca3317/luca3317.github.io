---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import PageHead from '@/components/PageHead.astro'
import Link from '@/components/Link.astro'
import Layout from '@/layouts/Layout.astro'
import { Icon } from 'astro-icon/components'
import { SITE } from '@/consts'
import { ABOUT_TEXT } from '@/consts'

// Person Schema for About page
const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": SITE.title,
  "url": SITE.href,
  "description": SITE.description
}
---
<Layout class="max-w-3xl">
  <PageHead slot="head" title="About" />
  
  <!-- Person Schema for About page SEO -->
  <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
  
  <Breadcrumbs items={[{ label: 'About', icon: 'lucide:user' }]} />

  <section class="flex flex-col gap-8">
    <!-- Header -->
    <div class="flex flex-col gap-4">
      <div>
        <h1 class="text-3xl md:text-4xl font-bold">About</h1>
        <p class="text-sm text-muted-foreground font-mono mt-1">
          What this page is about
        </p>
      </div>
    </div>

    <!-- Main Content -->
    <div class="prose prose-sm dark:prose-invert max-w-none space-y-6">
      <p class="text-muted-foreground leading-relaxed">
        Welcome to my website!<br>
        On here I share my portfolio, projects, and resume. I will also start devlogs for personal projects I'm working on soon.
        <br><br>
        <h3>About Me</h3>
        <p set:html={ABOUT_TEXT} />
      </p>
    </div>
  </section>
</Layout>
