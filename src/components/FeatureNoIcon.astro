---
interface Props {
  title?: string;
}

const { title = 'Title' } = Astro.props
---

<div class="h-full p-6 bg-[#161616] border border-white/10 rounded-xl transition-all duration-300 shadow-xl shadow-black/50 hover:-translate-y-1 hover:border-primary/50 hover:shadow-2xl hover:shadow-primary/10 flex flex-col gap-4">
  <div class="space-y-3">
    <h3 class="text-lg font-semibold text-white tracking-tight">{title}</h3>
    
    <div class="text-sm text-[#a1a1aa] leading-relaxed [&>img]:block [&>img]:w-full [&>img]:rounded-lg [&>img]:mb-3">
      <slot>
        Default description text.
      </slot>
    </div>
  </div>
</div>