---
import { Icon } from 'astro-icon/components'

interface Props {
  icon?: string;
  title?: string;
}

const { icon = 'mdi:rocket', title = 'Title' } = Astro.props
---

<div class="h-full p-6 bg-[#161616] border border-white/10 rounded-xl transition-all duration-300 shadow-xl shadow-black/50 hover:-translate-y-1 hover:border-primary/50 hover:shadow-2xl hover:shadow-primary/10 flex flex-col gap-4">
  
  {/* Icon Container */}
  <div class="size-10 rounded-lg bg-white/5 flex items-center justify-center text-primary shrink-0 ring-1 ring-white/10">
    <Icon name={icon} class="size-5" />
  </div>

  {/* Content */}
  <div class="space-y-2">
    <h3 class="text-lg font-semibold text-white tracking-tight">{title}</h3>
    <div class="text-sm text-[#a1a1aa] leading-relaxed">
      <slot>
        Default description text.
      </slot>
    </div>
  </div>

</div>